{
	"compilerOptions": {
	  "target": "ES2020",              // Keep modern JavaScript features
	  "module": "commonjs",            // Compile to CommonJS for compatibility
	  "outDir": "dist",                // Output folder for compiled files
	  "rootDir": "src",                // Source folder
	  "strict": true,                  // Enable strict type checking
	  "esModuleInterop": true,         // Interoperability with CommonJS modules
	  "moduleResolution": "node",      // Use Node.js module resolution
	  "resolveJsonModule": true,       // Allow importing JSON files
	  "skipLibCheck": true             // Skip library checking for faster builds
	},
	"include": ["src/**/*"],           // Include all files in the `src` folder
	"exclude": ["node_modules"]        // Exclude `node_modules` folder
  }